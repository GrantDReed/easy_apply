<div>
  <p>Name: <%= @user.name %></p>
  <p>Email: <%= @user.email %></p>
  <p><button><%= link_to "Edit profile", edit_user_path(@user) %></button>
</div>
<h3>Your jobs:</h3>
<ol>
  <% @user.jobs.each do |job| %>
    <li>
      <h3><%= job.title %></h3>
      <p><%= job.description %></p>
      <p>
        <button>
            <%= link_to (@user.employer ? "View applicants" : "View job"), job_path(job) %>
        </button>
      </p>
    </li>
  <% end %>
</ol>
